{
  "name": "portfolio-be-nes-js",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "dotenv -e env/local/.env.prisma -- npx prisma generate && nest build",
    "build:deploy": "npm install && npx prisma generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "npx prisma migrate deploy || echo 'Migration failed, starting app anyway...' && node dist/src/main.js",
    "start:prod:env": "dotenv -e .env -- node dist/src/main.js",
    "prisma:generate": "DOTENV_CONFIG_PATH=env/local/.env.prisma npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:deploy": "npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "prisma:seed": "dotenv -e env/local/.env.prisma -- node prisma/seed.ts",
    "prisma:seed:local": "dotenv -e env/local/.env.prisma -- node prisma/seed.ts",
    "prisma:seed:develop": "dotenv -e env/develop/.env.prisma -- node prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --force",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "setup-hooks": "git config core.hooksPath .githooks && echo \"âœ… Git hooks configured successfully!\"",
    "verify-setup": "npm test && npm run lint && npm run test:cov",
    "docker:up": "docker compose --env-file env/local/.env.docker up -d",
    "docker:down": "docker compose --env-file env/local/.env.docker down",
    "docker:logs": "docker compose --env-file env/local/.env.docker logs -f",
    "docker:ps": "docker compose --env-file env/local/.env.docker ps",
    "prisma:generate:local": "dotenv -e env/local/.env.prisma -- npx prisma generate",
    "prisma:generate:develop": "dotenv -e env/develop/.env.prisma -- npx prisma generate",
    "prisma:migrate:local": "dotenv -e env/local/.env.prisma -- npx prisma migrate dev",
    "prisma:migrate:develop": "dotenv -e env/develop/.env.prisma -- npx prisma migrate dev",
    "prisma:studio:local": "dotenv -e env/local/.env.prisma -- npx prisma studio",
    "prisma:studio:develop": "dotenv -e env/develop/.env.prisma -- npx prisma studio",
    "start:local": "dotenv -e env/local/.env.prisma -- nest start --watch",
    "start:develop": "dotenv -e env/develop/.env.prisma -- nest start --watch",
    "prisma:generate:prod": "dotenv -e env/prod/.env.prisma -- npx prisma generate",
    "prisma:migrate:prod": "dotenv -e env/prod/.env.prisma -- npx prisma migrate deploy",
    "prisma:studio:prod": "dotenv -e env/prod/.env.prisma -- npx prisma studio",
    "prisma:seed:prod": "dotenv -e env/prod/.env.prisma -- node prisma/seed.ts",
    "start:prod:db": "dotenv -e env/prod/.env.prisma -- node dist/src/main.js",
    "prod:bootstrap": "npm install && npm run build && npm run prisma:generate:prod && npm run prisma:migrate:prod && npm run prisma:studio:prod",
    "prod:prepare": "npm install && npm run build && npm run prisma:generate:prod && npm run prisma:migrate:prod"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.17.2",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "test/.*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/**/*.spec.ts",
      "!src/**/*.interface.ts",
      "!src/**/*.dto.ts",
      "!src/**/toolsConstants/**",
      "!src/main.ts"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ]
  }
}